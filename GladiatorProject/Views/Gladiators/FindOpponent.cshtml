@model GladiatorProject.Models.Gladiator

@{
    ViewBag.Title = "FindOpponent";
}

<div class="row">

    <div style="text-align:center">
        <h2>Prepair for gladiator battle</h2>
        <div class="row">
            <div class="col-md-2"></div>
            <div class="col-md-4" style="height:400px ; text-align:center ; border:solid black">
                <h4>Player</h4>
                
                    <div class="row">
                        <dl>
                            <dt>Name</dt>
                            <dd>@Model.Name</dd>
                            <dt>Level</dt>
                            <dd>@Model.Level</dd>
                            <dt>Experiance</dt>
                            <dd>@Model.Experiance</dd>
                            <dt>Health</dt>
                            <dd id="health">
                                @Model.Health / @Model.FullHealth <br /> @if (Model.SkillPoints >= 1)
                                {
                                    <button>
                                        @Ajax.ActionLink("Increase health", "AddHealth",
                                        new AjaxOptions
                                        {
                                        UpdateTargetId = "health",
                                        InsertionMode = InsertionMode.Replace
                                        })
                                    </button>
                                }
                            </dd>

                            <dt>Armor</dt>
                            <dd id="armor">
                                @Model.Armor <br />@if (Model.SkillPoints >= 1)
                                {
                                    <button>
                                        @Ajax.ActionLink("Increase armor", "AddArmor",
                                        new AjaxOptions
                                        {
                                        UpdateTargetId = "armor",
                                        InsertionMode = InsertionMode.Replace
                                        })
                                    </button>
                                }
                            </dd>

                            <dt>Damage</dt>
                            <dd id="damage">
                                @Model.Damage <br />@if (Model.SkillPoints >= 1)
                                {
                                    <button>
                                        @Ajax.ActionLink("Increase damage", "AddDamage",
                                        new AjaxOptions
                                        {
                                        UpdateTargetId = "damage",
                                        InsertionMode = InsertionMode.Replace
                                        })
                                    </button>
                                }
                            </dd>

                            <dt>Skill points</dt>
                            <dd>@Model.SkillPoints</dd>
                        </dl>
                        <div>
                            @Html.ActionLink("Back to gladiators", "Index", "Gladiators")
                        </div>
                    </div>
                </div>   

            <div class="col-md-4" style="height:400px;overflow:auto ; text-align:center ; border:solid black">
                <h4>Enemy</h4>
                <div id="opponent">
                    <button>
                        @Ajax.ActionLink("Search Opponent", "PartFindOpponent",new {id =Model.Id }, new AjaxOptions
                   {
                       UpdateTargetId = "opponent",
                       InsertionMode = InsertionMode.Replace,
                       OnSuccess = "some javascript"
                   })
                    </button>
                </div>
            </div>
            <div class="col-md-2"></div>
        </div> 
    </div>
</div>

