@model List<GladiatorProject.Models.ApplicationUser>

<h2 style="text-align:center">Top 10 Players</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayName("Name")
        </th>
        <th>
            @Html.DisplayName("HighScore")
        </th>
        <th>
            @Html.DisplayName("Gladiators")
        </th>
        <th></th>
    </tr>
    @foreach (var item in Model.OrderByDescending(i => i.AccountHighScore).Take(10))
    {
        if (item.Email != "Overlord@Admin.se")
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.UserName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.AccountHighScore)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Gladiators.Count)
                </td>
                <td>
                    @Html.ActionLink("Edit", "UserScoreEdit", new { id = item.Id }) |
                    @Html.ActionLink("Delete", "UserScoreDelete", new { id = item.Id })
                </td>
            </tr>
        }

    }

</table>