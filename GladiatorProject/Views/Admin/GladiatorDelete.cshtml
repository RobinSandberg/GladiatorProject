    ViewBag.Title = "GladiatorDelete";
}

<h2>Gladiator Delete</h2>

<p>You sure you wanna delete ?</p>

<dl>
    <dt>Name</dt>
    <dd>@Model.Name</dd>
    <dt>Level</dt>
    <dd>@Model.Level</dd>
    <dt>Health</dt>
    <dd>@Model.FullHealth</dd>
