@model GladiatorProject.Models.ApplicationUser

@{
    ViewBag.Title = "UserEdit";
}

<h2 class="Mystyle">User Edit</h2>

@using (Html.BeginForm("UserSave", "Admin"))
{
    @Html.HiddenFor(Model => Model.Id)
    <div class="form-horizontal">
        <div class="form-group">
            @Html.LabelFor(Model => Model.UserName)
            <div>
                @Html.EditorFor(Model => Model.UserName)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(Model => Model.Email)
            <div>
                @Html.EditorFor(Model => Model.Email)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(Model => Model.AccountHighScore)
            <div>
                @Html.EditorFor(Model => Model.AccountHighScore)
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save changes" class="btn btn-default" />
            </div>
        </div>

        <div>
            @Html.ActionLink("Back to Admin Menu", "Index")
        </div>
    </div>
}