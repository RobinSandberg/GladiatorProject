@model GladiatorProject.Models.RegisterViewModel

@{
    ViewBag.Title = "CreateUser";
}

<h2 class="Mystyle">Create User</h2>

@using (Html.BeginForm("CreateUser", "Admin"))
{
    @Html.AntiForgeryToken()
<div class="form-horizontal">
    <div class="form-group">
        @Html.LabelFor(Model => Model.UserName)
        <div>
            @Html.EditorFor(Model => Model.UserName)
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(Model => Model.Email)
        <div>
            @Html.EditorFor(Model => Model.Email)
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Password)
        <div>
            @Html.PasswordFor(m => m.Password)
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.ConfirmPassword)
        <div>
            @Html.PasswordFor(m => m.ConfirmPassword)
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Role)
        <div>
            @Html.DropDownListFor(m => m.Role, Model.Roles.Select(role => new SelectListItem()
       {
           Text = role,
           Value = role,
           Selected  = role == Model.Role
       } ))
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Add User" class="btn btn-default" />
        </div>
    </div>

    <div>
        @Html.ActionLink("Back to Admin Menu", "Index")
    </div>
</div>
}