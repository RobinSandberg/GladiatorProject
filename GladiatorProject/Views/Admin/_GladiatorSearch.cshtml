@model List<GladiatorProject.Models.Gladiator>

<table class="table">
    <tr>
        <th>
            @Html.DisplayName("Name")
        </th>
        <th>
            @Html.DisplayName("Level")
        </th>
        <th>
            @Html.DisplayName("Exp")
        </th>
        <th>
            @Html.DisplayName("Skill points")
        </th>
        <th>
            @Html.DisplayName("Health")
        </th>
        <th>
            @Html.DisplayName("Armor")
        </th>
        <th>
            @Html.DisplayName("Max Armor")
        </th>
        <th>
            @Html.DisplayName("Strenght")
        </th>
        <th>
            @Html.DisplayName("Modifyer")
        </th>
        <th>
            @Html.DisplayName("Constitution")
        </th>
        <th>
            @Html.DisplayName("Modifyer")
        </th>
        <th>
            @Html.DisplayName("Gold")
        </th>
        <th>
            @Html.DisplayName("Previous Owner")
        </th>
        <th>
            @Html.DisplayName("Owner")
        </th>
    </tr>

    @foreach (var item in Model)
    {
        if (item.User == null)
        {
            <tr>
                <td>
                    @Html.DisplayFor(ModelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Level)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Experiance)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.SkillPoints)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FullHealth)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Armor)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.MaxArmor)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Strenght)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.StrenghtModifyer)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Constitution)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ConstitutionModifyer)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Gold)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PreviousUser)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.User)
                </td>
                <td>
                    @Html.ActionLink("Edit", "GladiatorEdit", new { id = item.Id }) |
                    @Html.ActionLink("Restore owner", "GladiatorRestore", new { id = item.Id }) |
                    @Ajax.ActionLink("Battle Log", "GladiatorDetails", new { id = item.Id }, new AjaxOptions
               {
                   UpdateTargetId = "GladiatorLog",
                   InsertionMode = InsertionMode.Replace
               }) |
                    @Html.ActionLink("Delete", "GladiatorDelete", new { id = item.Id })
                </td>
            </tr>
        }
    }
</table>