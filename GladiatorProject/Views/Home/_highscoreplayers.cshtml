@model List<GladiatorProject.Models.ApplicationUser>

<h2 style="text-align:center">Top 10 Players</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayName("Name")
        </th>
        <th>
            @Html.DisplayName("HighScore")
        </th>
        <th>
            @Html.DisplayName("Gladiators")
        </th>
        <th></th>
    </tr>
    @foreach (var item in Model.OrderByDescending(i => i.AccountHighScore).Take(10)) // Order them by the highest score at top and 10 players.
    {
        if (item.AccountHighScore >= 0) // Remove the admin from the list with -1 score.
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.UserName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.AccountHighScore)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Gladiators.Count)
                </td>
            </tr>
        }
