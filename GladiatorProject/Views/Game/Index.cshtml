@model GladiatorProject.Models.Gladiator

@{
    ViewBag.Title = "Index";
}

<div class="row">

    <div style="text-align:center">
        <h2>Welcome to Gladiator games</h2>
        <div class="row">
            <div class="col-md-2"></div>
            <div class="col-md-4" style="height:400px ; text-align:center ; border:solid black">
                <h4>Player</h4>
                <div>
                    @Html.Partial("_gladiator");
                </div>
            </div>

            <div class="col-md-4" style="height:400px;overflow:auto ; text-align:center ; border:solid black">
                <h4>Enemy</h4>
                <div id="opponent">
                    <button>
                        @Ajax.ActionLink("Find Opponent", "PartFindOpponent", new AjaxOptions
                            {
                            UpdateTargetId = "opponent",
                            InsertionMode = InsertionMode.Replace
                            })
                    </button>
                </div>
            </div>
            <div class="col-md-2"></div>
        </div>
            </div>
        </div>
