@model GladiatorProject.Models.Message

@{
    ViewBag.Title = "AddMessage";
}

<h2 class="Mystyle" style="text-align:center;">Add Message</h2>

@using (Html.BeginForm("AddMessage", "Support"))
{

    <div class="form-horizontal">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.DisplayName("Your message")
            <div>
                @Html.TextAreaFor(Model => Model.Body)
                @Html.ValidationMessageFor(model => model.Body, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Respond" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to Admin Menu", "Index")
</div>